[LLM]
# OpenAI API Configuration
openai_api_key = your_openai_api_key_here
openai_model = gpt-4o
openai_base_url = https://api.openai.com/v1

# Anthropic API Configuration (alternative)
anthropic_api_key = your_anthropic_api_key_here
anthropic_model = claude-3-5-sonnet-20241022

# OpenRouter API Configuration (alternative)
openrouter_api_key = your_openrouter_api_key_here
openrouter_model = anthropic/claude-3.5-sonnet
openrouter_base_url = https://openrouter.ai/api/v1

# Choose which LLM to use: openai, anthropic, or openrouter
default_llm = anthropic

[JIRA]
# Jira Configuration (Read-Only Access)
# Used to read existing tickets for RCA context
jira_url = https://your-domain.atlassian.net
jira_username = your_email@company.com
jira_api_token = your_jira_api_token_here
jira_project_key = CPE

[MCP]
# MCP Server Configuration
mcp_server_timeout = 30
mcp_max_retries = 3

# File Processing MCP Server
filesystem_mcp_enabled = true
filesystem_mcp_allowed_paths = /tmp,./uploads,./data

# Jira MCP Server
jira_mcp_enabled = true
jira_mcp_server_path = ./servers/jira-mcp

# Web Scraping MCP Server
web_scraper_mcp_enabled = true
web_scraper_mcp_server_path = ./servers/web-scraper-mcp

[APPLICATION]
# Application Settings
app_title = Root Cause Analysis Tool
app_host = 0.0.0.0
app_port = 8090
debug_mode = false
max_file_size_mb = 50
allowed_file_types = .pdf,.txt,.docx,.md

# Upload directory
upload_directory = ./uploads

# Output directory for generated RCA documents
output_directory = ./output

[SECURITY]
# Security Settings
session_secret_key = your_session_secret_key_here
max_login_attempts = 5
session_timeout_minutes = 60

[LOGGING]
# Logging Configuration
log_level = INFO
log_file = ./logs/app.log
log_max_size_mb = 10
log_backup_count = 5